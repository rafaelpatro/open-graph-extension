<?xml version="1.0"?>
<config>
    <tabs>
        <webgriffe translate="label">
            <label>Webgriffe Extensions</label>
            <sort_order>999000</sort_order>
        </webgriffe>
    </tabs>
    <sections>
        <webgriffe_opengraph translate="label" module="webgriffe_opengraph">
            <class>separator-top</class>
            <label>Open graph</label>
            <tab>webgriffe</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="webgriffe_opengraph">
                    <label>General</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <application_id translate="label">
                            <label>Application ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[<a href="http://developers.facebook.com/setup/" target="_blank">Register here</a>]]></comment>
                        </application_id>
                        <admin_id translate="label">
                            <label>Admin ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </admin_id>
                    </fields>
                </general>
                <homepage translate="label" module="webgriffe_opengraph">
                    <label>Homepage</label>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <image_path translate="label,comment">
                            <label>Image path</label>
                            <comment>Image path starting from the current theme directory under skin. E.g.: "images/logo.jpg"</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </image_path>
                    </fields>
                </homepage>
                <product_view translate="label" module="webgriffe_opengraph">
                    <label>Prouct view</label>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <only_base_image translate="label,comment">
                            <label>Use only base image</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </only_base_image>
                    </fields>
                </product_view>
            </groups>
        </webgriffe_opengraph>
    </sections>
</config>
